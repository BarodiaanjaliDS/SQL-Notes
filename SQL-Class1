--Command to create databse
CREATE DATABASE BigDataBootcamp;

create DATABASE TestDB;


--command to list all database
show databases;

--drop a database
drop DATABASE TestDB;


-- go inside a specific DATABASE
use BigDataBootcamp;

--create a table 
create table if not exists employee
(
    id int,
    name VARCHAR(50)
);

-- command to list all tables
show tables;

-- command to show table create command query
show create table employee; 
